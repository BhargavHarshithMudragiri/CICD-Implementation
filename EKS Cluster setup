#Setting up EKS Cluster of 8 nodes using Eksctl on Ubuntu 22.04

eksctl create cluster --name java-app --nodegroup-name java-nodegroup --node-type t3.micro --nodes 8 --managed 

#To Delete the  kubernetes cluster using eksctl, use below command
eksctl delete cluster java-app


# To Create EKS Cluster using EKSCTL execute below 

eksctl create cluster --name=observability \
                      --region=us-east-1 \
                      --zones=us-east-1a,us-east-1b \
                      --without-nodegroup

eksctl utils associate-iam-oidc-provider \
    --region us-east-1 \
    --cluster observability \
    --approve

eksctl create nodegroup --cluster=observability \
                        --region=us-east-1 \
                        --name=observability-ng-private \
                        --node-type=t3.medium \
                        --nodes-min=2 \
                        --nodes-max=3 \
                        --node-volume-size=20 \
                        --managed \
                        --asg-access \
                        --external-dns-access \
                        --full-ecr-access \
                        --appmesh-access \
                        --alb-ingress-access \
                        --node-private-networking

# Update ./kube/config file
aws eks update-kubeconfig --name observability
